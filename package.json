{
  "name": "resume-builder",
  "version": "0.1.0",
  "private": true,
  "main": "src/backend/dist/index.js",
  "author": "Edgar Lima (RobotoSkunk)",
  "description": "Una aplicación simple para construír currículums automáticamente porque me da flojera usar Word.",
  "scripts": {
    "dev": "npm run build:backend && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev src/frontend --turbopack\" \"electron .\"",
    "dev:watch": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev src/frontend --turbopack\" \"nodemon --exec electron .\"",
    "build:backend": "tsc -p src/backend",
    "tscw": "tsc -w -p src/backend",
    "release": "npm run release:linux",
    "prebuild": "next telemetry disable",
    "lint": "next lint src/frontend",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "get-port-please": "^3.1.2",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/eslintrc": "^3",
    "@types/express": "^5.0.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "electron": "^36.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "typescript": "^5"
  },
  "packageManager": "npm@11.3.0"
}
