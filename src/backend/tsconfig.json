{
	"$schema": "https://json.schemastore.org/tsconfig",

	"compilerOptions": {
		"outDir": "dist",
		
		"lib": [ "Es2023" ],
		"module": "Node16",
		"target": "ES2022",

		"moduleResolution": "Node16",

		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"forceConsistentCasingInFileNames": true,

		"removeComments": true,
		"sourceMap": true,
	},

	"include": [
		"src/**/*",
	]
}
